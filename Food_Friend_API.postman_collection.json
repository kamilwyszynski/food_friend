{
    "info": {
        "_postman_id": "food-friend-api-collection",
        "name": "Food Friend API",
        "description": "API collection for testing Food Friend recipe generation endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Sign Up (Email/Password)",
                    "request": {
                        "method": "POST",
                        "header": [
                            { "key": "apikey", "value": "{{supabase_anon_key}}" },
                            { "key": "Authorization", "value": "Bearer {{supabase_anon_key}}" },
                            { "key": "Content-Type", "value": "application/json" }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"{{auth_email}}\",\n  \"password\": \"{{auth_password}}\"\n}",
                            "options": { "raw": { "language": "json" } }
                        },
                        "url": {
                            "raw": "{{supabase_url}}/auth/v1/signup",
                            "host": ["{{supabase_url}}"],
                            "path": ["auth", "v1", "signup"]
                        },
                        "description": "Creates a new Supabase user. If email confirmations are enabled, confirm the email via the link sent."
                    },
                    "response": []
                },
                {
                    "name": "Sign In (Password)",
                    "request": {
                        "method": "POST",
                        "header": [
                            { "key": "apikey", "value": "{{supabase_anon_key}}" },
                            { "key": "Authorization", "value": "Bearer {{supabase_anon_key}}" },
                            { "key": "Content-Type", "value": "application/json" }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"{{auth_email}}\",\n  \"password\": \"{{auth_password}}\"\n}",
                            "options": { "raw": { "language": "json" } }
                        },
                        "url": {
                            "raw": "{{supabase_url}}/auth/v1/token?grant_type=password",
                            "host": ["{{supabase_url}}"],
                            "path": ["auth", "v1", "token"],
                            "query": [ { "key": "grant_type", "value": "password" } ]
                        },
                        "description": "Signs in and returns an access_token (JWT). A test script will store it into collection variable 'access_token'."
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "const json = pm.response.json();",
                                    "if (json && json.access_token) { pm.collectionVariables.set('access_token', json.access_token); }"
                                ]
                            }
                        }
                    ],
                    "response": []
                }
            ]
        },
        {
            "name": "Recipe",
            "item": [
                {
                    "name": "Generate Recipe from Base64 Image",
                    "request": {
                        "method": "POST",
                        "header": [
                            { "key": "Content-Type", "value": "application/json" },
                            { "key": "Authorization", "value": "Bearer {{access_token}}" }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"image_base64\": \"{{sample_base64_image}}\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/recipe/generate/base64",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "recipe",
                                "generate",
                                "base64"
                            ]
                        },
                        "description": "Generate a recipe from a base64 encoded image. Requires Authorization Bearer token."
                    },
                    "response": []
                },
                {
                    "name": "Generate Recipe from Image Upload",
                    "request": {
                        "method": "POST",
                        "header": [ { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": [],
                                    "description": "Upload an image file containing ingredients"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/recipe/generate/upload",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "recipe",
                                "generate",
                                "upload"
                            ]
                        },
                        "description": "Upload an image file and generate a recipe. Requires Authorization Bearer token."
                    },
                    "response": []
                }
            ],
            "description": "Endpoints for recipe generation from images"
        },
        {
            "name": "Chat",
            "item": [
                {
                    "name": "Send Message",
                    "request": {
                        "method": "POST",
                        "header": [
                            { "key": "Content-Type", "value": "application/json" },
                            { "key": "Authorization", "value": "Bearer {{access_token}}" }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"message\": \"What's a quick dinner?\",\n  \"session_id\": \"{{chat_session_id}}\"\n}",
                            "options": { "raw": { "language": "json" } }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/chat",
                            "host": ["{{base_url}}"],
                            "path": ["api","v1","chat"]
                        },
                        "description": "Send a chat message. Stores returned session_id in collection variable chat_session_id."
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "const json = pm.response.json();",
                                    "if (json && json.session_id) { pm.collectionVariables.set('chat_session_id', json.session_id); }"
                                ]
                            }
                        }
                    ],
                    "response": []
                }
            ]
        }
    ],
    "event": [
        { "listen": "prerequest", "script": { "type": "text/javascript", "exec": [""] } },
        { "listen": "test", "script": { "type": "text/javascript", "exec": [""] } }
    ],
    "variable": [
        { "key": "base_url", "value": "http://localhost:8000", "type": "string" },
        { "key": "sample_base64_image", "value": "iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mP8/5+hHgAHggJ/PchI7wAAAABJRU5ErkJggg==", "type": "string" },
        { "key": "supabase_url", "value": "https://<PROJECT_REF>.supabase.co", "type": "string" },
        { "key": "supabase_anon_key", "value": "<YOUR_SUPABASE_ANON_KEY>", "type": "string" },
        { "key": "auth_email", "value": "you@example.com", "type": "string" },
        { "key": "auth_password", "value": "yourStrongPassword", "type": "string" },
        { "key": "access_token", "value": "", "type": "string" },
        { "key": "chat_session_id", "value": "", "type": "string" }
    ]
}
